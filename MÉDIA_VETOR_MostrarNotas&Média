algoritmo "MEDIA_VETOR_MostrarNotasMÉDIA"

var
   notas: vetor [0..2] de real
   i: inteiro
   soma: real
   media : real
inicio
   para i de 0 ate 2 faca
      escreval ("Digite sua nota: ")
      leia(notas[i])
      soma <- soma + (notas[i])
   fimpara


   media <- soma / 3

   para i de 0 ate 2 faca
      escreval(" ")
      escreval("Notas: ", notas[i])
   fimpara
   escreval("  ")
   escreval("MÉDIA: ", media)


fimalgoritmo
